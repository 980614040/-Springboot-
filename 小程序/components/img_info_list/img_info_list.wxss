.img_info_list{
  display: flex;width: 90%;
  border-bottom: 1rpx solid lightgray;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  
}

.img{
  flex: 1;
  

}
.info{
  flex: 1;
 
}
.img image{
  height: 200rpx;
  width: 200rpx;
}
.info view{
  padding-right: 20rpx;
  margin-top: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  width: 400rpx;

}
.info .intoinfo{
  border-radius: 50rpx;
  margin-top: 30rpx;
  padding: 10rpx;
  color: grey;
  background: honeydew;
  width: 240rpx;
  height: 70rpx;
  text-align: center;
  margin-left: 100rpx;
}
